# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# DASHBOARD
GET     /dashboard                  controllers.Application.dashboard()

# PROFILE
GET     /profile                    controllers.Application.profile()

# GENERAL
GET     /form                       controllers.Application.form()

# AUTHENTICATION
GET     /login                      controllers.AuthenticationController.login()
POST    /login                      controllers.AuthenticationController.handleLogin()

# REGISTRATION
GET     /registration                   controllers.RegistrationController.registration()
POST    /registration                   controllers.RegistrationController.handleRegistration()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


